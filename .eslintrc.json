{
  "env": {
    "browser": true,
    "es6": true,
    "webextensions": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "plugins": ["prettier"],
  "rules": {
    "no-shadow": ["error", { "allow": ["err"] }],
    "prefer-arrow-callback": "error",
    "curly": ["error", "multi", "consistent"],
    "prettier/prettier": "error"
  }
}
